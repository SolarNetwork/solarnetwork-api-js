{
  "name": "solarnetwork-core",
  "version": "0.1.0",
  "description": "SolarNetwork Core",
  "keywords": [
    "solarnetwork"
  ],
  "homepage": "https://github.com/SolarNetwork/solarnetwork-api-js",
  "license": "Apache-2.0",
  "author": {
    "name": "Matt Magoffin",
    "email": "matt@solarnetwork.net"
  },
  "main": "build/solarnetwork-core.js",
  "module": "index",
  "jsnext:main": "index",
  "repository": {
    "type": "git",
    "url": "https://github.com/SolarNetwork/solarnetwork-api-js.git"
  },
  "ava": {
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "cwd": "packagejson"
        }
      ]
    ]
  },
  "scripts": {
    "apidoc": "jsdoc --package package.json --recurse --destination build/apidoc src",
    "build": "rm -rf build && mkdir build && rollup --banner \"$(preamble)\" -c -f umd -n sn -m -o build/solarnetwork-core.js -- index.js",
    "postbuild": "eslint index.js src && uglifyjs --preamble \"$(preamble)\" build/solarnetwork-core.js --in-source-map build/solarnetwork-core.js.map --source-map build/solarnetwork-core.min.js.map -c -m -o build/solarnetwork-core.min.js",
    "prepublish": "npm run test && npm run build",
    "test": "ava"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-core": "^6.24.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-module-resolver": "~3.0.0-beta.3",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "eslint": "3",
    "global-object": "^1.0.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.3",
    "nyc": "^11.0.3",
    "package-preamble": "0.1",
    "rollup": "0.43",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-includepaths": "^0.2.2",
    "uglify-js": "^3.0.23"
  },
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "d3-time-format": "^2.0.5",
    "uri-js": "^3.0.2"
  }
}
